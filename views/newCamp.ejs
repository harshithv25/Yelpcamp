<% layout('layouts/boilerplate.ejs') %>
<div class="row">
  <div class="page__heading mb-5">
    <h2 class="text-center text-white">New Campground</h2>
  </div>
  <div class="col-6 offset-3 form">
    <form action="/campgrounds" method="POST" novalidate class="validate">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <div class="input-group mb-3">
          <input class="form-control" type="text" id="title" placeholder="eg: Dusty Hollow" name="campgrounds[title]" required />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please provide the name of the Campground.</div>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <div class="input-group mb-3">
          <input class="form-control" type="text" id="location" placeholder="eg: Lancaster, Pennsylvania" name="campgrounds[location]" required />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please provide the location of the Campground.</div>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Price</label>
        <div class="input-group mb-3">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="number"
            class="form-control"
            placeholder="0.00"
            id="price"
            aria-label="price"
            name="campgrounds[price]"
            aria-describedby="price-label"
            required
          />
          <span class="input-group-text">night</span>
          <div class="valid-feedback">Reasonalble!</div>
          <div class="invalid-feedback">Please provide a valid price for the Campground.</div>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image Url</label>
        <div class="input-group mb-3">
          <input class="form-control" type="text" id="image" name="campgrounds[image]" required />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please provide a valid Image Url for the Campground.</div>
        </div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="Description">Description</label>
        <div class="input-group mb-3">
          <textarea class="form-control" type="text" id="Description" name="campgrounds[description]" required></textarea>
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please provide a description for the Campground.</div>
        </div>
      </div>
      <div class="form__bottom">
        <a href="/campgrounds" class="btn btn-danger">Cancel</a>
        <button class="btn btn-success form__button">Add Campground</button>
      </div>
    </form>
  </div>
</div>
